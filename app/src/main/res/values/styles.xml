<?xml version="1.0" encoding="UTF-8"?>
<resources>

  <style name="Showcase.Theme" parent="Theme.AppCompat.Light.NoActionBar">
    <item name="colorPrimary">@color/kelly_green</item>
    <item name="colorPrimaryDark">@color/napier_green</item>
    <item name="android:textColorPrimary">@color/primary_text</item>
    <item name="android:textColorSecondary">@color/secondary_text</item>
  </style>

  <style name="ShotContainerStyle"/>

  <style name="RecentCommentsStyle">
    <item name="android:background">@color/primary_text</item>
  </style>

  <style name="ShotHeaderStyle">
    <item name="android:layout_marginBottom">20dp</item>
  </style>

  <style name="ArticleContentViewStyle">
    <item name="android:layout_gravity">center_horizontal</item>
    <item name="android:layout_marginLeft">@dimen/article_content_horizontal_margin</item>
    <item name="android:layout_marginRight">@dimen/article_content_horizontal_margin</item>
  </style>

  <!--<item name="fontPath">fonts/${FONT_FILE}</item>-->
  <style name="texto_botones_style" parent="android:Widget.TextView">
    <item name="android:textColor">@color/portland_orange</item>
    <item name="android:textSize">@dimen/texto_botones_size</item>
    <item name="android:textStyle">normal</item>
  </style>

  <style name="boton_login" parent="@android:style/Widget.Button">
    <item name="android:background">@drawable/btn_singin_selector</item>
    <item name="android:textColor"></item> <!-- Here is specified text color -->
  </style>
</resources>