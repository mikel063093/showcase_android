    <item name="fontPath">fonts/Circular-Std-Book.otf</item>

  </style>

  <style name="ToolbarTextAppearance">
    <item name="fontPath">fonts/Circular-Std-Book.otf</item>
    <item name="android:textColor">@color/white</item>
    <item name="android:shadowDx">1</item>
    <item name="android:shadowDy">1</item>
    <item name="android:shadowRadius">2</item>
    <item name="android:shadowColor">?colorAccent</item>
  </style>

  <style name="ToolbarTextAppearance.Title">
    <item name="android:textSize">20sp</item>
  </style>

  <style name="ToolbarTextAppearance.Subtitle">
    <item name="android:textSize">14sp</item>
  </style>

  <style name="MyToolbarStyle" parent="Theme.AppCompat.Light.DarkActionBar">
    <!--<item name="theme">@style/ThemeOverlay.AppCompat.Light</item>-->
    <item name="android:background">@color/kelly_green</item>
    <item name="android:elevation">4dp</item>


  </style>

  <style name="SearchViewTheme" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    <!--<item name="colorControlActivated">@color/amber500</item>-->
    <!--<item name="colorControlNormal">@color/green500</item>-->
    <item name="searchIcon">@drawable/btn_buscar</item>
    <!--<item name="iconifiedByDefault">false</item>-->
    <item name="goIcon">@drawable/btn_flechaizquierda</item>
  </style>

  <style name="SearchViewThemeText" parent="Widget.AppCompat.AutoCompleteTextView">
    <item name="android:textColor">@color/white</item>
    <item name="android:textColorHint">@color/white</item>
  </style>
</resources>
