<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_54sdp"
    android:layout_marginBottom="@dimen/_8sdp"
    android:layout_marginTop="@dimen/_8sdp"
>

  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/root_section"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_54sdp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      style="@style/card_orange"
  >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_54sdp"
        android:layout_gravity="center"
        android:orientation="horizontal"
    >

      <android.support.v7.widget.AppCompatButton
          android:id="@+id/btn_section"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentEnd="true"
          android:layout_marginBottom="@dimen/_7sdp"
          android:layout_marginEnd="@dimen/_3sdp"
          android:layout_marginTop="@dimen/_7sdp"
          android:background="@drawable/btn_orange_perl"
          android:maxLines="1"
          android:text="@string/Ver_todos"
          android:textSize="@dimen/_12sdp"
          fontPath="fonts/Circular-Std-Bold.otf"
          style="@style/txt_white_style"

      />
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/txt_section"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/_14sdp"
          android:layout_marginStart="20dp"
          android:gravity="center"
          android:text="@string/Almacenes_de_ropa"
          android:textSize="@dimen/_15sdp"
          fontPath="fonts/Circular-Std-Bold.otf"
          style="@style/txt_white_style"
      />
    </RelativeLayout>


  </android.support.v7.widget.CardView>

  <!--</com.gigamole.samples.ShadowLayout>-->

</RelativeLayout>


