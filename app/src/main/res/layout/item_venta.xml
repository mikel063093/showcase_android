<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="@dimen/_115sdp"
      android:layout_height="@dimen/_144sdp"
      android:layout_gravity="center"
      android:background="@color/black"
      android:gravity="center"
      android:orientation="vertical"
      >
    <ImageView
        android:id="@+id/img_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_80sdp"
        android:src="@drawable/foto_articulo_1"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_description_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Chaqueta de Jean"
        android:textSize="@dimen/_19sdp"
        fontPath="fonts/Circular-Std-Bold.otf"
        style="@style/txt_taupe"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_price_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="center"
        android:maxLines="1"
        android:text="$66.500"
        android:textSize="@dimen/_17sdp"
        fontPath="fonts/Circular-Std-Bold.otf"
        style="@style/txt_dark_tangerine"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_units_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="center"
        android:maxLines="1"
        android:text="2 unidades"
        android:textSize="@dimen/_15sdp"
        fontPath="fonts/Circular-Std-Bold.otf"
        style="@style/txt_manatee"
        />

  </LinearLayout>


</LinearLayout>