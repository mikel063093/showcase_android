<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_marginLeft="@dimen/_3sdp"
    android:layout_marginRight="@dimen/_3sdp"
    android:layout_marginTop="@dimen/_8sdp"
    android:orientation="vertical"
    >
  <LinearLayout
      android:layout_width="@dimen/_243sdp"
      android:layout_height="match_parent"
      android:orientation="vertical"
      >
    <ImageView
        android:id="@+id/img_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_marginLeft="@dimen/_2sdp"
        android:layout_marginRight="@dimen/_2sdp"
        android:layout_marginTop="@dimen/_4sdp"
        android:src="@drawable/foto_articulo_1"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_name_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Chaqueta de Jean"
        android:textSize="@dimen/_18sdp"
        style="@style/txt_taupe"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_description_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_6sdp"
        android:gravity="center"
        android:maxLines="3"
        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla dui lorem, dictum at orci non, rutrum ullamcorper felis."
        android:textSize="@dimen/_14sdp"
        style="@style/txt_outer_space"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_price_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_7sdp"
        android:gravity="center"
        android:maxLines="1"
        android:text="$66.500"
        android:textSize="@dimen/_19sdp"
        fontPath="fonts/Circular-Std-Bold.otf"
        style="@style/txt_dark_tangerine"
        />
    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/txt_units_item"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_5sdp"
        android:layout_marginRight="@dimen/_5sdp"
        android:layout_marginTop="@dimen/_2sdp"
        android:gravity="center"
        android:maxLines="1"
        android:text="Talla S, M, L"
        android:textSize="@dimen/_13sdp"
        style="@style/txt_manatee"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_17sdp"
        android:gravity="center"
        android:orientation="horizontal"
        >
      <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/btn_menos"
          />
      <android.support.v7.widget.AppCompatTextView
          android:layout_width="@dimen/_28sdp"
          android:layout_height="@dimen/_20sdp"
          android:layout_marginLeft="@dimen/_6sdp"
          android:layout_marginRight="@dimen/_6sdp"
          android:text="100"
          android:textSize="@dimen/_16sdp"
          style="@style/txt_pearl_aqua"

          />
      <ImageButton
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:background="@drawable/btn_mas"
          />
    </LinearLayout>
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_reservar"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_28sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_12sdp"
        android:background="@drawable/btn_naranja_selector"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:text="@string/reservar"
        style="@style/txt_white_style"
        />
  </LinearLayout>


</LinearLayout>