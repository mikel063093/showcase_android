<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kelly_green"
    android:orientation="vertical"

    >

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"
      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"

      android:orientation="vertical"
      >
    <ImageView
        android:layout_width="@dimen/_138sdp"
        android:layout_height="@dimen/_139sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:src="@drawable/logo_showcase"
        />
    <ImageView
        android:layout_width="@dimen/_256sdp"
        android:layout_height="@dimen/_300sdp"
        android:layout_marginTop="@dimen/_48sdp"
        android:background="@drawable/rana_splash"
        android:id="@+id/imageView2"
        />

  </LinearLayout>

  <LinearLayout
      android:id="@+id/root_txt"
      android:layout_width="@dimen/_270sdp"
      android:layout_height="@dimen/_50sdp"
      android:layout_marginLeft="@dimen/_21sdp"
      android:layout_marginRight="@dimen/_72sdp"
      android:layout_marginTop="@dimen/_300sdp"
      android:background="@drawable/btn_naranja_selector"
      >
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginLeft="@dimen/_10sdp"
        android:layout_marginRight="@dimen/_10sdp"
        android:text="@string/encuentra"
        android:textSize="@dimen/_30sdp"
        style="@style/txt_white_style"
        />
  </LinearLayout>

  <TextView
      android:layout_width="@dimen/_300sdp"
      android:layout_height="@dimen/_63sdp"
      android:layout_below="@+id/root_txt"
      android:layout_marginLeft="@dimen/_34sdp"
      android:layout_marginRight="@dimen/_10sdp"
      android:maxLines="2"
      android:textSize="@dimen/_22sdp"
      style="@style/txt_white_style"
      android:text="@string/lo_que_quieres_comprar"
      />
</RelativeLayout>