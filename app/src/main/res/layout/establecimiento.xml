<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_smoke"
    android:orientation="vertical"
    >
  <android.support.v4.widget.DrawerLayout
      android:id="@+id/drawer_layout"
      android:layout_width="match_parent"
      android:layout_height="match_parent"
      >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        >
      <android.support.v7.widget.Toolbar
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:id="@+id/toolbar_home"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:background="@color/kelly_green"
          android:fitsSystemWindows="true"
          android:minHeight="?attr/actionBarSize"
          app:navigationIcon="@drawable/btn_menu_principal"
          style="@style/MyToolbarStyle"
          />
      <android.support.v4.widget.NestedScrollView
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
          <RelativeLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/_130sdp"
              android:layout_gravity="center"
              android:background="@color/white"
              android:gravity="center"
              >

            <com.co.showcase.ui.CustomView.CirclePageIndicator
                android:id="@+id/indicator_home"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_7sdp"
                android:gravity="center"
                android:padding="10dip"

                />
            <android.support.v4.view.ViewPager
                android:id="@+id/view_pager_home"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_135sdp"
                android:layout_alignBottom="@+id/indicator_home"
                android:layout_alignParentStart="true"
                />
          </RelativeLayout>
          <RelativeLayout

              android:layout_width="match_parent"
              android:layout_height="@dimen/_347sdp"
              android:layout_marginLeft="@dimen/_12sdp"
              android:layout_marginRight="@dimen/_12sdp"
              android:layout_marginTop="@dimen/_11sdp"
              >


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_346sdp"
                android:layout_marginLeft="@dimen/_13sdp"
                android:layout_marginRight="@dimen/_13sdp"
                android:layout_marginTop="@dimen/_7sdp"
                style="@style/card_singin_small"
                >
              <RelativeLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_alignParentBottom="true"
                  android:gravity="center|bottom"
                  >
                <ImageView
                    android:id="@+id/share_general"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentBottom="true"
                    android:layout_marginBottom="@dimen/_8sdp"
                    android:background="@drawable/btn_compartir"
                    />
              </RelativeLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_321sdp"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                style="@style/card_singin"
                >

              <LinearLayout
                  android:layout_width="match_parent"
                  android:layout_height="match_parent"
                  android:layout_marginBottom="@dimen/_10sdp"
                  android:layout_marginLeft="@dimen/_18sdp"
                  android:layout_marginRight="@dimen/_18sdp"
                  android:layout_marginTop="@dimen/_10sdp"
                  android:orientation="vertical"
                  >
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txt_name_company"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_27sdp"
                    android:text="Levi's"
                    android:textColor="@color/napier_green"
                    android:textSize="@dimen/_19sdp"
                    style="@style/txt_medium_turquoise"
                    />
                <android.support.v7.widget.AppCompatTextView
                    android:id="@+id/txt_description"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_92sdp"
                    android:gravity="start|center"
                    android:maxLines="8"
                    android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Nulla dui lorem, dictum at orci non, rutrum ullamcorper felis. Cum sociis natoque penatibus et magnis dis parturient montes, nascetur ridiculus mus. Cras pulvinar convallis quam, et pulvinar nisi. Duis consequat vulputate dapibus. Donec eu luctus mauris."
                    android:textSize="14sp"
                    style="@style/txt_taupe1"
                    />
                <LinearLayout
                    android:layout_width="336dp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    >
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_13sdp"
                      android:layout_marginTop="@dimen/_3sdp"
                      android:gravity="center|left"
                      android:orientation="horizontal"
                      >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ico_direccion"
                        />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txt_addres"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:text="Carrera 9 # 18N-343 Apto 301 "
                        android:textSize="13sp"
                        style="@style/txt_taupe1"
                        />
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_13sdp"
                      android:layout_marginTop="@dimen/_3sdp"
                      android:gravity="center|left"
                      android:orientation="horizontal"

                      >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ico_telefono"
                        />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txt_phone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:text="300-571234"
                        android:textSize="13sp"
                        style="@style/txt_taupe1"
                        />
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_13sdp"
                      android:layout_marginTop="@dimen/_3sdp"
                      android:gravity="center|left"
                      android:orientation="horizontal"
                      >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ico_whatsapp"
                        />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txt_celphone"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:text="301-5712345"
                        android:textSize="13sp"
                        style="@style/txt_taupe1"

                        />
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_13sdp"
                      android:layout_marginTop="@dimen/_3sdp"
                      android:gravity="center|left"
                      android:orientation="horizontal"
                      >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ico_correo_establecimiento"
                        />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txt_email"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:text="ventas@levis.com"
                        android:textSize="13sp"
                        style="@style/txt_taupe1"
                        />
                  </LinearLayout>
                  <LinearLayout
                      android:layout_width="match_parent"
                      android:layout_height="@dimen/_13sdp"
                      android:layout_marginTop="@dimen/_3sdp"
                      android:gravity="center|left"
                      android:orientation="horizontal"
                      >
                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/ico_sitioweb"
                        />
                    <android.support.v7.widget.AppCompatTextView
                        android:id="@+id/txt_website"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_12sdp"
                        android:text="levis.com.co"
                        android:textSize="13sp"
                        style="@style/txt_taupe1"
                        />
                  </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    >
                  <ImageView
                      android:id="@+id/btn_sahre_fb"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:src="@drawable/btn_facebook_compartir"
                      />
                  <ImageView
                      android:id="@+id/btn_sahre_tw"
                      android:layout_width="wrap_content"
                      android:layout_height="wrap_content"
                      android:layout_marginStart="@dimen/_24sdp"
                      android:src="@drawable/btn_twitter_compartir"
                      />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_16sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    >
                  <RatingBar
                      android:id="@+id/ratingBar"
                      android:layout_width="wrap_content"
                      android:layout_height="match_parent"
                      android:numStars="5"
                      android:rating="5"
                      android:stepSize="0.5"
                      style="@style/RatingBarCompany"
                      />
                </LinearLayout>


              </LinearLayout>
            </android.support.v7.widget.CardView>
          </RelativeLayout>
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="@dimen/_35sdp"
              android:layout_marginBottom="@dimen/_6sdp"
              android:layout_marginLeft="@dimen/_12sdp"
              android:layout_marginRight="@dimen/_12sdp"
              android:layout_marginTop="@dimen/_11sdp"
              android:gravity="center"
              android:orientation="vertical"
              style="@style/card_organe_small"
              >

            <android.support.v7.widget.AppCompatTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:maxLines="1"
                android:text="@string/offer"
                android:textSize="@dimen/_14sdp"
                android:textStyle="bold"
                style="@style/txt_white_style"
                />

          </LinearLayout>
          <android.support.v7.widget.RecyclerView
              android:id="@+id/rv_home"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_marginLeft="@dimen/_12sdp"
              android:layout_marginRight="@dimen/_12sdp"
              app:layout_behavior="@string/appbar_scrolling_view_behavior"
              />
        </LinearLayout>

      </android.support.v4.widget.NestedScrollView>

    </LinearLayout>
    <RelativeLayout
        android:id="@+id/drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:choiceMode="singleChoice"
        />
  </android.support.v4.widget.DrawerLayout>
</LinearLayout>