<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:card_view="http://schemas.android.com/tools"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:background="@color/white_smoke"
    android:orientation="vertical"
>

  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/root_section1"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_48sdp"
      android:layout_marginBottom="@dimen/_6sdp"
      android:layout_marginLeft="@dimen/_12sdp"
      android:layout_marginRight="@dimen/_12sdp"
      android:layout_marginTop="@dimen/_11sdp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      card_view:cardCornerRadius="3dp"
      card_view:cardElevation="4dp"
      card_view:cardPreventCornerOverlap="true"
      card_view:cardUseCompatPadding="false"
      style="@style/card_orange">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical"
        style="@style/card_organe_small"
    >

      <android.support.v7.widget.AppCompatTextView
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:gravity="center"
          android:maxLines="1"
          android:text="@string/offer"
          android:textSize="@dimen/_14sdp"
          android:textStyle="bold"
          style="@style/txt_white_style_bold"
      />

    </LinearLayout>


  </android.support.v7.widget.CardView>

  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/root_section"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_48sdp"
      android:layout_marginBottom="@dimen/_6sdp"
      android:layout_marginLeft="@dimen/_12sdp"
      android:layout_marginRight="@dimen/_12sdp"
      android:layout_marginTop="@dimen/_2sdp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      card_view:cardCornerRadius="3dp"
      card_view:cardElevation="4dp"
      card_view:cardPreventCornerOverlap="true"
      card_view:cardUseCompatPadding="false"
      style="@style/card_orange">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_gravity="center"
        android:orientation="horizontal">

      <android.support.v7.widget.AppCompatButton
          android:id="@+id/btn_section"
          android:layout_width="wrap_content"
          android:layout_height="match_parent"
          android:layout_alignParentEnd="true"
          android:layout_marginBottom="@dimen/_8sdp"
          android:layout_marginEnd="@dimen/_5sdp"
          android:layout_marginTop="@dimen/_8sdp"
          android:background="@drawable/btn_orange_perl"
          android:maxLines="1"
          android:text="@string/Ver_todos"
          android:textSize="@dimen/_12sdp"
          fontPath="fonts/Circular-Std-Bold.otf"
          style="@style/txt_white_style"/>
      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/txt_section"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_alignParentStart="true"
          android:layout_centerVertical="true"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/_14sdp"
          android:layout_marginStart="20dp"
          android:gravity="center"
          android:text="@string/Almacenes_de_ropa"
          android:textSize="@dimen/_15sdp"
          android:textStyle="bold"
          fontPath="fonts/Circular-Std-Bold.otf"
          style="@style/txt_white_style"
      />
    </RelativeLayout>


  </android.support.v7.widget.CardView>

</LinearLayout>