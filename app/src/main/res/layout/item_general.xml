<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/root_section"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:clickable="true"
    android:foreground="?android:attr/selectableItemBackground"
    card_view:cardCornerRadius="3dp"
    card_view:cardElevation="4dp"
    card_view:cardPreventCornerOverlap="true"
    card_view:cardUseCompatPadding="true"
    style="@style/card_white"
>
  <FrameLayout
      android:layout_width="match_parent"
      android:layout_height="match_parent"
  >
    <LinearLayout

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:orientation="vertical"
    >
      <RelativeLayout
          android:id="@+id/root_bookmark"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="top|end"
          android:layout_marginBottom="@dimen/_2sdp"
          android:layout_marginEnd="8dp"
          android:visibility="gone"
      >
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_marginTop="-5dp"
            card_view:srcCompat="@drawable/ic_bookmark_48_orange"
        />
        <TextView
            android:id="@+id/txt_item_map"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:maxLength="3"

            android:maxLines="1"
            android:textSize="@dimen/_8sdp"
            fontPath="fonts/Circular-Std-Bold.otf"
            style="@style/txt_white_style"
        />
      </RelativeLayout>
      <LinearLayout android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:orientation="vertical"
      >
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_100sdp"
            android:scaleType="centerInside"

        />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_item_general"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_16sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_8sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_3sdp"
            android:layout_marginTop="@dimen/_2sdp"

            android:gravity="center"
            android:maxLines="1"
            android:textSize="@dimen/_14sdp"
            fontPath="fonts/Circular-Std-Bold.otf"
            style="@style/txt_black_style"
        />
      </LinearLayout>

    </LinearLayout>
  </FrameLayout>
</android.support.v7.widget.CardView>