<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kelly_green"
    android:orientation="vertical"
    >
  <RelativeLayout

      android:layout_width="match_parent"
      android:layout_height="@dimen/_385sdp"
      android:layout_marginLeft="@dimen/_26sdp"
      android:layout_marginRight="@dimen/_26sdp"
      android:layout_marginTop="@dimen/_53sdp"
      >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_361sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/card_singin"

        >
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"

            >

          <ImageView
              android:id="@+id/img_elimiar"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:background="@drawable/btn_eliminar"
              />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="@dimen/_243sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >
          <ImageView
              android:id="@+id/img_item"
              android:layout_width="@dimen/_120sdp"
              android:layout_height="@dimen/_150sdp"
              android:layout_marginLeft="@dimen/_2sdp"
              android:layout_marginRight="@dimen/_2sdp"
              android:layout_marginTop="@dimen/_4sdp"

              />
          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/txt_name_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_6sdp"
              android:gravity="center"
              android:maxLines="1"

              android:textSize="@dimen/_18sdp"
              style="@style/txt_taupe"
              />

          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/txt_price_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_7sdp"
              android:gravity="center"
              android:maxLines="1"

              android:textSize="@dimen/_19sdp"
              fontPath="fonts/Circular-Std-Bold.otf"
              style="@style/txt_dark_tangerine"
              />
          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/txt_units_item"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_2sdp"
              android:gravity="center"
              android:maxLines="1"

              android:textSize="@dimen/_13sdp"
              style="@style/txt_manatee"
              />
          <LinearLayout
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_marginTop="@dimen/_12sdp"
              android:gravity="center"
              android:orientation="horizontal"
              >
            <ImageButton
                android:id="@+id/btn_less"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_menos"
                />
            <android.support.v7.widget.AppCompatTextView
                android:id="@+id/txt_item_count"
                android:layout_width="@dimen/_28sdp"
                android:layout_height="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_6sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:gravity="center"

                android:textSize="@dimen/_16sdp"
                style="@style/txt_pearl_aqua"

                />
            <ImageButton
                android:id="@+id/btm_more"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_mas"
                />
          </LinearLayout>
          <android.support.v7.widget.AppCompatButton
              android:id="@+id/btn_reservar"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/_28sdp"
              android:layout_gravity="center"
              android:layout_marginBottom="@dimen/_3sdp"
              android:layout_marginTop="@dimen/_10sdp"
              android:background="@drawable/btn_naranja_selector"
              android:paddingLeft="@dimen/_20sdp"
              android:paddingRight="@dimen/_20sdp"
              android:text="@string/Guardar"
              style="@style/txt_white_style"
              />
        </LinearLayout>
      </FrameLayout>
    </android.support.v7.widget.CardView>
  </RelativeLayout>
</LinearLayout>

