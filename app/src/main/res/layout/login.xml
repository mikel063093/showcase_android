<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container_root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kelly_green"
    android:orientation="vertical"

    >
  <ImageView
      android:id="@+id/imageView4"
      android:layout_width="@dimen/_220sdp"
      android:layout_height="@dimen/_289sdp"
      android:layout_alignParentBottom="true"
      android:layout_alignParentStart="true"
      android:background="@drawable/rana_inicial"
      />

  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/_130sdp"
      android:layout_alignParentBottom="true"
      android:layout_marginLeft="@dimen/_14sdp"
      android:layout_marginRight="@dimen/_14sdp"
      android:orientation="vertical"
      >
    <com.facebook.login.widget.LoginButton xmlns:fb="http://schemas.android.com/apk/res-auto"
    android:id="@+id/auth_fb"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_40sdp"
    android:layout_marginTop="@dimen/_6sdp"
    android:textColor="#fff"
    android:textSize="16dp"
    android:visibility="gone"
    fb:login_text="@string/login.fb"
    />
    <android.support.v7.widget.AppCompatButton
        android:id="@+id/btn_fb"
        android:layout_width="@dimen/_272sdp"
        android:layout_height="@dimen/_46sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_17sdp"
        android:background="@drawable/btn_facebook_ingreso"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_53sdp"
        android:layout_gravity="center"
        android:gravity="center"
        android:orientation="horizontal"
        >
      <android.support.v7.widget.AppCompatButton
          android:id="@+id/btn_ingresar"
          android:layout_width="@dimen/_130sdp"
          android:layout_height="@dimen/_41sdp"
          android:layout_gravity="center"
          android:background="@drawable/btn_singin_selector"
          android:text="@string/ingresar"
          style="@style/texto_botones_style"
          />
      <android.support.v7.widget.AppCompatButton
          android:id="@+id/btn_registrar"
          android:layout_width="@dimen/_130sdp"
          android:layout_height="@dimen/_41sdp"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/_9sdp"
          android:background="@drawable/btn_singin_selector"
          android:gravity="center"
          android:text="@string/registrarse"
          style="@style/texto_botones_style"
          />

    </LinearLayout>
  </LinearLayout>
  <LinearLayout
      android:layout_width="match_parent"
      android:layout_height="wrap_content"

      android:layout_alignParentStart="true"
      android:layout_alignParentTop="true"
      android:orientation="vertical"
      >
    <ImageView
        android:id="@+id/imageView3"
        android:layout_width="@dimen/_103sdp"
        android:layout_height="@dimen/_104sdp"
        android:layout_gravity="center"
        android:layout_marginTop="@dimen/_30sdp"
        android:gravity="center"
        android:src="@drawable/logo_showcase"
        />


  </LinearLayout>


</RelativeLayout>