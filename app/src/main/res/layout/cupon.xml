<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kelly_green"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_gravity="center"
    >
  <RelativeLayout

      android:layout_width="match_parent"
      android:layout_height="@dimen/_158sdp"
      android:layout_marginLeft="@dimen/_26sdp"
      android:layout_marginRight="@dimen/_26sdp"

      >


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_361sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/card_singin"

        >
      <FrameLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:layout_marginEnd="@dimen/_16sdp"
            android:layout_marginTop="@dimen/_8sdp"

            >

          <ImageView
              android:id="@+id/img_cancelar_cupon"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:layout_centerHorizontal="true"
              android:layout_centerInParent="true"
              android:background="@drawable/btn_cerrar"
              />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="@dimen/_243sdp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical"
            >

          <android.support.v7.widget.AppCompatTextView

              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_6sdp"
              android:gravity="center"
              android:maxLines="1"
              android:text="@string/agrega_cupon"
              android:textSize="@dimen/_18sdp"
              style="@style/txt_taupe"
              />

          <android.support.v7.widget.AppCompatEditText
              android:id="@+id/edt_cupon"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_8sdp"
              android:gravity="center"
              android:hint="@string/ingresa_codigo_promo"
              android:inputType="text"
              android:textColor="@color/outer_space"
              android:textColorHint="@color/outer_space"
              android:textSize="@dimen/_12sdp"
              android:theme="@style/edt_singin"
              />
          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/txt_error"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_gravity="center"
              android:layout_marginLeft="@dimen/_5sdp"
              android:layout_marginRight="@dimen/_5sdp"
              android:layout_marginTop="@dimen/_6sdp"
              android:gravity="center"
              android:maxLines="1"
              android:text="@string/cupon_invalido"
              android:textColor="@color/candy_apple_red"
              android:textSize="@dimen/_11sdp"
              android:visibility="invisible"
              style="@style/txt_manatee"
              />

          <android.support.v7.widget.AppCompatButton
              android:id="@+id/btn_cupon"
              android:layout_width="wrap_content"
              android:layout_height="@dimen/_28sdp"
              android:layout_gravity="center"
              android:layout_marginBottom="@dimen/_3sdp"
              android:layout_marginTop="@dimen/_6sdp"
              android:background="@drawable/btn_naranja_selector"
              android:paddingLeft="@dimen/_20sdp"
              android:paddingRight="@dimen/_20sdp"
              android:text="@string/redimir_cupon"
              style="@style/txt_white_style"
              />
        </LinearLayout>
      </FrameLayout>
    </android.support.v7.widget.CardView>
  </RelativeLayout>
</LinearLayout>

