<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kelly_green"
    android:orientation="vertical"

    >

    <android.support.v7.widget.Toolbar xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        style="@style/MyToolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fitsSystemWindows="true"
        android:minHeight="?attr/actionBarSize"
        app:elevation="0dp"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="@dimen/_231sdp"
        android:layout_height="@dimen/_206sdp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:src="@drawable/rana_contrasena" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_45sdp"
        android:orientation="vertical">

        <android.support.v7.widget.CardView
            style="@style/card_singin_small"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_260sdp"
            android:layout_marginLeft="@dimen/_18sdp"
            android:layout_marginRight="@dimen/_18sdp">


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    style="@style/card_organe_small"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_124sdp"

                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatTextView

                        style="@style/txt_red_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/recuperar_password"
                        android:textSize="@dimen/_18sdp"
                        android:textStyle="bold" />

                    <android.support.v7.widget.AppCompatTextView
                        style="@style/txt_white_style"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_14sdp"
                        android:layout_marginRight="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_6sdp"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="@string/escribe_tu_correo"
                        android:textSize="@dimen/_12sdp" />
                </LinearLayout>

                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical">

                    <android.support.design.widget.TextInputLayout
                        android:id="@+id/emailWrapper"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_16sdp"
                        android:layout_marginRight="@dimen/_16sdp"
                        android:hint="@string/correo"
                        android:textColorHint="@color/yellow_green">

                        <android.support.v7.widget.AppCompatEditText
                            android:id="@+id/edt_email"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:drawablePadding="@dimen/_8sdp"
                            android:drawableStart="@drawable/ico_correo"
                            android:inputType="textEmailAddress"
                            android:textColor="@color/napier_green"
                            android:theme="@style/edt_singin" />
                    </android.support.design.widget.TextInputLayout>
                </LinearLayout>
            </LinearLayout>


        </android.support.v7.widget.CardView>

        <android.support.v7.widget.AppCompatButton

            android:id="@+id/btn_ingresar"
            style="@style/txt_white_style"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_40sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_32sdp"
            android:background="@drawable/btn_naranja_selector"
            android:paddingLeft="@dimen/_36sdp"
            android:paddingRight="@dimen/_36sdp"
            android:text="@string/Enviar" />

    </LinearLayout>


</RelativeLayout>