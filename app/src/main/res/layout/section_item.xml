<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/_48sdp"
    >
  <android.support.v7.widget.CardView
      xmlns:android="http://schemas.android.com/apk/res/android"
      android:id="@+id/root_section"
      android:layout_width="match_parent"
      android:layout_height="@dimen/_48sdp"
      android:gravity="center_vertical"
      android:orientation="horizontal"
      style="@style/card_orange"
      >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_48sdp"
        android:layout_gravity="center"
        android:orientation="horizontal"
        >

      <android.support.v7.widget.AppCompatTextView
          android:id="@+id/txt_section"
          android:layout_width="wrap_content"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginLeft="@dimen/_14sdp"
          android:gravity="center"
          android:text="@string/Almacenes_de_ropa"
          android:textSize="@dimen/_15sdp"
          fontPath="fonts/Circular-Std-Bold.otf"
          style="@style/txt_white_style"
          />
      <android.support.v7.widget.AppCompatButton
          android:id="@+id/btn_section"
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:layout_gravity="center"
          android:layout_marginBottom="@dimen/_5sdp"
          android:layout_marginLeft="@dimen/_50sdp"
          android:layout_marginRight="@dimen/_8sdp"
          android:layout_marginTop="@dimen/_5sdp"
          android:background="@drawable/btn_orange_perl"
          android:foregroundGravity="center"
          android:gravity="center"
          android:text="@string/Ver_todos"
          android:textSize="@dimen/_12sdp"
          fontPath="fonts/Circular-Std-Bold.otf"
          style="@style/txt_white_style"
          android:maxLines="1"
          />
    </LinearLayout>


  </android.support.v7.widget.CardView>
</RelativeLayout>


