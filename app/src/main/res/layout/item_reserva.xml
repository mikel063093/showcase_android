<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/kelly_green"
    android:gravity="center"
    android:orientation="vertical"
>
  <RelativeLayout
      android:layout_width="match_parent"
      android:layout_height="@dimen/_405sdp"
      android:layout_marginLeft="@dimen/_12sdp"
      android:layout_marginRight="@dimen/_12sdp">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_405sdp"
        android:layout_marginLeft="@dimen/_13sdp"
        android:layout_marginRight="@dimen/_13sdp"
        android:layout_marginTop="@dimen/_7sdp"
        style="@style/card_singin_small"
    >
      <RelativeLayout
          android:layout_width="match_parent"
          android:layout_height="match_parent"
          android:layout_alignParentBottom="true"
          android:background="@color/white_smoke"
          android:gravity="center|bottom"
      >
        <ImageView
            android:id="@+id/share_general"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_8sdp"
            android:background="@drawable/btn_compartir"
        />
      </RelativeLayout>

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="@dimen/_377sdp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        style="@style/card_singin"

    >
      <LinearLayout
          android:layout_width="@dimen/_243sdp"
          android:layout_height="@dimen/_362sdp"
          android:layout_gravity="top|center"
          android:orientation="vertical"
      >
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:layout_gravity="center"
            android:background="@color/white"
            android:gravity="center"
            android:visibility="visible"
        >
          <android.support.v4.view.ViewPager
              android:id="@+id/view_pager_home"
              android:layout_width="match_parent"
              android:layout_height="@dimen/_155sdp"
              android:layout_alignBottom="@+id/indicator_home"
              android:layout_alignParentStart="true"/>
          <com.co.showcase.ui.CustomView.CirclePageIndicator
              android:id="@+id/indicator_home"
              android:layout_width="fill_parent"
              android:layout_height="wrap_content"
              android:layout_alignParentBottom="true"
              android:layout_alignParentEnd="true"
              android:layout_alignParentRight="true"
              android:layout_gravity="center"
              android:layout_marginBottom="@dimen/_7sdp"
              android:gravity="center"
              android:padding="10dip"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/img_item"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_130sdp"
            android:layout_marginLeft="@dimen/_2sdp"
            android:layout_marginRight="@dimen/_2sdp"
            android:layout_marginTop="@dimen/_4sdp"
            android:src="@drawable/foto_articulo_3"
            android:visibility="gone"
        />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_name_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Chaqueta de Jean"
            android:textSize="@dimen/_18sdp"
            style="@style/txt_taupe"
        />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_description_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:layout_marginBottom="@dimen/_2sdp"
            android:textSize="@dimen/_10sdp"
            style="@style/txt_taupe1_open_sans"/>
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_price_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:gravity="center"
            android:maxLines="1"
            android:text="$66.500"
            android:textSize="@dimen/_21sdp"
            fontPath="fonts/Circular-Std-Bold.otf"
            style="@style/txt_dark_tangerine"
        />
        <android.support.v7.widget.AppCompatTextView
            android:id="@+id/txt_units_item"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_2sdp"
            android:gravity="center"
            android:maxLines="1"
            android:text="Talla S, M, L"
            android:textSize="@dimen/_13sdp"
            style="@style/txt_manatee"
        />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_12sdp"
            android:gravity="center"
            android:orientation="horizontal"
        >
          <ImageButton
              android:id="@+id/btn_less"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/btn_menos"
          />
          <android.support.v7.widget.AppCompatTextView
              android:id="@+id/txt_item_count"
              android:layout_width="@dimen/_28sdp"
              android:layout_height="@dimen/_20sdp"
              android:layout_marginLeft="@dimen/_2sdp"
              android:layout_marginRight="@dimen/_2sdp"
              android:gravity="center"
              android:textSize="@dimen/_18sdp"
              style="@style/txt_pearl_aqua"/>
          <ImageButton
              android:id="@+id/btm_more"
              android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:background="@drawable/btn_mas"
          />
        </LinearLayout>
        <android.support.v7.widget.AppCompatButton
            android:id="@+id/btn_reservar"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_28sdp"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/_4sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/btn_naranja_selector"
            android:paddingLeft="@dimen/_20sdp"
            android:paddingRight="@dimen/_20sdp"
            android:text="@string/reservar"
            style="@style/txt_white_style"
        />
      </LinearLayout>

    </android.support.v7.widget.CardView>
  </RelativeLayout>

</LinearLayout>

